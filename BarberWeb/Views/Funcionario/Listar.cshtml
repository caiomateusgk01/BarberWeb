@model List<Funcionario>

@{

    DateTime datahora = ViewBag.DataHora;
}


@* Conteudo *@
    <div class="m-5">
        <h1>Gerenciamento de Funcionario</h1>

        <table style="margin-bottom:15px;margin-top:15px" class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>RG</th>
                    <th>Telefone</th>
                    <th>E-mail</th>
                    <th>Endereço</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Funcionario item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Cpf</td>
                    <td>@item.Telefone</td>
                    <td>@item.Email</td>
                    <td>@item.Endereco</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Funcionario" asp-action="Remover" asp-route-id="@item.Id">Remover</a>
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Funcionario" asp-action="Edit" asp-route-id="@item.Id">Alterar</a>
                    </td>
                </tr>
                }
            </tbody>

        </table>
        <p>
            <b>Dados atualizados em: </b>@datahora
        </p>
    </div>
