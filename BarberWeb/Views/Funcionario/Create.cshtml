@model Funcionario

<script type="text/javascript">
            $(document).ready(function(){
                $('#cpf').mask('000.000.000-00');
            });
 </script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#telefone').mask('(00)00000-0000');
    });
</script>

<form asp-action="Create" method="post">
    <fieldset>
        <legend>Cadastrar Funcionario</legend>
        <div asp-validation-summary="ModelOnly" class="alert alert-dismissable"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input type="text" asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf"></label>
                <input id="cpf" type="text" asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone"></label>
                <input id="telefone" type="text" asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="text" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco"></label>
                <input type="text" asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco"></span>
            </div>
            <div class="form-group">
                <label asp-for="CriadoEm" class="control-label"></label>
                <input asp-for="CriadoEm" class="form-control" />
                <span asp-validation-for="CriadoEm" class="text-danger"></span>
            </div>
            <input type="submit" class="btn btn-success" value="Cadastrar" />
            <input type="submit" asp-action="Listar" method="post" class="btn btn-success" value="Listar" />
            </div>
</fieldset>
</form>

